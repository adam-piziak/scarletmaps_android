<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/route_stop_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/nearby_stop_item_background"
    android:layout_marginVertical="10dp"
    android:layout_marginHorizontal="10dp"
    android:clickable="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/route_stop_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingBottom="5dp"
        android:paddingHorizontal="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="#000"
        android:textSize="16sp"
        tools:text="Scott Hall" />

    <TextView
        android:id="@+id/route_stop_times"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Arriving in 10 min, 15min"
        android:paddingHorizontal="20dp"
        android:textColor="#555"
        android:paddingBottom="15dp"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/route_stop_name"/>


</androidx.constraintlayout.widget.ConstraintLayout>