<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/nav_graph"
    app:startDestination="@id/fragmentNearMe">
    <fragment
        android:id="@+id/fragmentNearMe"
        android:name="com.example.scarletmaps.ui.nearby.Nearby"
        android:label="FragmentNearMe"
        tools:layout="@layout/fragment_near_me">
        <action
            android:id="@+id/action_fragmentNearMe_to_testFragment"
            app:destination="@id/testFragment" />
    </fragment>
    <fragment
        android:id="@+id/fragmentRouteList"
        android:name="com.example.scarletmaps.ui.routelist.RouteList"
        android:label="FragmentRouteList"
        tools:layout="@layout/routelist">
        <action
            android:id="@+id/action_fragmentRouteList_to_routeView"
            app:destination="@id/routeView"
            app:enterAnim="@anim/nav_default_enter_anim" />
    </fragment>
    <fragment
        android:id="@+id/fragmentStopList"
        android:name="com.example.scarletmaps.ui.stoplist.StopList"
        android:label="FragmentStopList"
        tools:layout="@layout/stoplist"/>
    <fragment
        android:id="@+id/home"
        tools:layout="@layout/home"
        android:name="com.example.scarletmaps.ui.home.Home"
        android:label="Home" />
    <fragment
        android:id="@+id/routeView"
        android:name="com.example.scarletmaps.ui.routeviewer.RouteViewer"
        android:label="RouteView"
        tools:layout="@layout/routeview">
        <action
            android:id="@+id/action_routeView_to_fragmentRouteList"
            app:destination="@id/fragmentRouteList" />
    </fragment>
    <fragment
        android:id="@+id/testFragment"
        android:name="com.example.scarletmaps.ui.TestFragment"
        android:label="TestFragment" />
</navigation>